#!/bin/sh

srcdir="@srcdir@"

echo Testing Couenne:
echo

for i in $srcdir/../test/config_files/* 

  do 

    method=`basename $i` 

    echo Testing $method:

    for j in $srcdir/../test/data/*.nl 

    do

	cp $j .
        name=`basename $j .nl`

        cat $srcdir/../test/couenne.opt.base $i  > couenne.opt 
        echo -n "couenne_check "                >> couenne.opt
        cat $srcdir/../test/data/$name.obj      >> couenne.opt

        ../src/main/couenne $name | grep "Global Optimum Test"

	rm -f $name
        rm -f couenne.opt 

    done
    echo
done 
